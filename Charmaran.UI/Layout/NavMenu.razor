<div class="top-row navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <span class="brand-name">Charmaran</span>
            <span class="brand-subtitle">Company</span>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <i class="bi bi-list"></i>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill nav-icon"></i> <span class="nav-text">Home</span>
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="AttendanceTracker">
                <i class="bi bi-calendar-check nav-icon"></i> <span class="nav-text">Attendance Tracker</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}